<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/layout_subview_recycleview_loadfooter"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="5dp">

    <ProgressBar
        android:id="@id/progressbar_subview_recycleview_loadfooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@android:color/darker_gray" />

    <TextView
        android:id="@id/textview_subview_recycleview_loadfooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/noMoreData"
        android:textColor="#99999999"
        android:textSize="16sp"
        android:visibility="gone" />
</RelativeLayout>
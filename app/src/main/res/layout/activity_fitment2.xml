<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwf.yiqizhuangxiu.gui.activity.Fitment2Activity">

    <RelativeLayout
        android:id="@+id/zhujiemian_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/biankuang"
        >
        <Button
            android:layout_width="40dp"
            android:enabled="true"
            android:layout_height="30dp"
            android:background="@mipmap/btn_new_back_nor"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/btn"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:tabIndicatorColor="@android:color/holo_blue_bright"
            app:tabSelectedTextColor="@android:color/holo_blue_bright"
            app:tabTextColor="@android:color/black"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/zhujiemian_1"></android.support.v4.view.ViewPager>

</RelativeLayout>

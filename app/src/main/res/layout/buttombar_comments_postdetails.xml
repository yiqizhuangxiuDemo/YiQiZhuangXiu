<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_buttombar"
        android:hint="输入评论"
        android:paddingLeft="18dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/textsize12sp" />

    <ImageView
        android:id="@id/titlebar_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/zan_normal_new" />

    <ImageView
        android:id="@id/titlebar_collect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/article_uncollect" />

    <ImageView
        android:id="@id/titlebar_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/share_new" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ownersay_fragment_tab_image"
            android:src="@mipmap/search_new"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <android.support.design.widget.TabLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/ownersay_fragment_tab_tablayout"
                app:tabSelectedTextColor="@android:color/holo_blue_dark"
                app:tabTextColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/ownersay_fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/floatting_layout"
        android:background="#99ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
                android:id="@+id/feed"
                android:layout_marginBottom="-150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:src="@mipmap/create_feed_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/order"
                android:layout_marginBottom="-150dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/feed"
                android:layout_marginLeft="100dp"
                android:src="@mipmap/show_order_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/note"
                android:layout_marginBottom="-150dp"
                android:layout_marginLeft="50dp"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/create_note_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/complain"
                android:layout_marginBottom="-150dp"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@+id/note"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/create_complain_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/ownersay_fragment_floating"
        android:scaleType="fitXY"
        android:src="@drawable/float_layer_menu_normal"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right|bottom"
        android:layout_width="50dp"
        android:layout_height="60dp"/>
</FrameLayout>
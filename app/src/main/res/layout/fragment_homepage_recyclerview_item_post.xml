<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginBottom="8dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/simpleDraweeView_articledetails_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="centerCrop"
            app:placeholderImage="@drawable/place_holder" />

        <TextView
            android:id="@id/name_articledetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/simpleDraweeView_articledetails_head"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/simpleDraweeView_articledetails_head"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@id/time_articledetails_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_articledetails"
            android:layout_below="@id/name_articledetails"
            android:layout_toRightOf="@id/simpleDraweeView_articledetails_head"
            android:textSize="12sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:drawableTop="@drawable/add_attention"
            android:text="加关注"
            android:textColor="#22ff22"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@id/title_articledetatils_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/simpleDraweeView_articledetails"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        app:placeholderImage="@drawable/place_holder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:text="精选自北京装修论坛>"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@id/comment_articledetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/comment_hui"
            android:drawablePadding="5dp"
            android:text="0"
            android:textSize="14sp" />

        <TextView
            android:id="@id/look_articledetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:drawableLeft="@drawable/looked_hui"
            android:drawablePadding="5dp"
            android:text="0"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
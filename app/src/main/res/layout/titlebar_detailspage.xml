<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@id/titlebar_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/titlebar_back_selector" />

    <TextView
        android:id="@id/titlebar_back_textview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/titlebar_back"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@id/titlebar_content"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="详情页"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@id/titlebar_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/share_new" />
</RelativeLayout>
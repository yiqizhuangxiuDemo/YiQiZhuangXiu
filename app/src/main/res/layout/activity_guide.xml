<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@id/cancel_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:text="@string/cancel"
            android:textColor="@color/mainGreen"
            android:textSize="16sp" />]

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide_realize"
                android:textColor="@color/gray_darker"
                android:textSize="@dimen/textsize12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="16dp"
                    android:layout_height="2px"
                    android:layout_marginRight="6dp"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_hint"
                    android:textColor="@color/gray_darker"
                    android:textSize="@dimen/textsize12sp" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="2px"
                    android:layout_marginLeft="6dp"
                    android:background="@color/gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide_check_sex"
                android:textColor="@color/gray_darker"
                android:textSize="@dimen/textsize12sp" />

            <RadioGroup
                android:id="@id/guide_chenck_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sex_man"
                    style="@style/CustomRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingLeft="12dp"
                    android:text="@string/guide_check_sex_man"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize12sp" />

                <RadioButton
                    android:id="@+id/sex_woman"
                    style="@style/CustomRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="20dp"
                    android:paddingLeft="12dp"
                    android:text="@string/guide_check_sex_woman"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize12sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide_check_sex"
                android:textColor="@color/gray_darker"
                android:textSize="@dimen/textsize12sp" />

            <DatePicker
                android:id="@id/guide_check_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide_check_progress"
                android:textColor="@color/gray_darker"
                android:textSize="@dimen/textsize12sp" />

            <RadioGroup
                android:id="@id/guide_check_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="left"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/progress_1"
                    style="@style/CustomRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:text="正在装修"
                    android:textColor="@color/gray_darker"
                    android:textSize="@dimen/textsize12sp" />

                <RadioButton
                    android:id="@+id/progress_2"
                    style="@style/CustomRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawablePadding="20dp"
                    android:paddingLeft="12dp"
                    android:text="计划装修    今年    明年    后年"
                    android:textColor="@color/gray_darker"
                    android:textSize="@dimen/textsize12sp" />

                <RadioButton
                    android:id="@+id/progress_3"
                    style="@style/CustomRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawablePadding="20dp"
                    android:paddingLeft="12dp"
                    android:text="已经入住"
                    android:textColor="@color/gray_darker"
                    android:textSize="@dimen/textsize12sp" />

                <RadioButton
                    android:id="@+id/progress_4"
                    style="@style/CustomRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawablePadding="20dp"
                    android:paddingLeft="12dp"
                    android:text="暂无计划"
                    android:textColor="@color/gray_darker"
                    android:textSize="@dimen/textsize12sp" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@id/guide_over"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/guide_button_bg"
            android:text="进入一起装修"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
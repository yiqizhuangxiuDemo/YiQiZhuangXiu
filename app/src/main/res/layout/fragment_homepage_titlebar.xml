<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/root_hemepage_titlbar"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/zxing_hpmepage_titlebar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:padding="4.5dp"
        android:src="@drawable/home_title_scan" />

    <RelativeLayout
        android:id="@id/search_hpmepage_titlebar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:padding="3dp"
            android:src="@drawable/search_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/edittext_titlebar_homepage"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:text="@string/search_info"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@id/location_hpmepage_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/home_title_location_flag"
        android:gravity="center"
        android:text="@string/location_citiname"
        android:textColor="@android:color/white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/progress_image_anthor"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:actualImageScaleType="centerInside"
        app:placeholderImage="@drawable/kf5_agent"
        app:failureImageScaleType="centerInside"
        />
    <TextView
        android:id="@id/text_name"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/progress_image_anthor"
        android:text="主權來（gongzhang）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@id/text_commnet"
        android:text="hah"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/progress_image_anthor"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.bwf.yiqizhuangxiu.gui.custom.MyGridView
        android:id="@id/progress_gridview"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_marginRight="10dp"
        android:numColumns="3"
        android:layout_toRightOf="@+id/progress_image_anthor"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_commnet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@id/text_creat_time"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/progress_gridview"
        android:layout_toRightOf="@+id/progress_image_anthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_creat_time"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>
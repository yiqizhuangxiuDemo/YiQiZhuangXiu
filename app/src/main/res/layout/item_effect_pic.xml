<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/effect_image_sd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@id/from_articledetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="精选自北京装修论坛>"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@id/comment_articledetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:drawableLeft="@drawable/looked_hui"
                    android:drawablePadding="5dp"
                    android:text="0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@id/view_articledetails_Nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:drawableLeft="@mipmap/ic_taochan_like"
                    android:drawablePadding="5dp"
                    android:text="0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:padding="20dp"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@id/text_effect_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
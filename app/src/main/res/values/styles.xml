<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainGreen</item>
        <item name="colorPrimaryDark">@color/mainGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myToolBatStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="titlebar_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="popupwindow_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden</item>
    </style>

    <style name="popupwindow_anim_scale" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_scale</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden_scale</item>
    </style>

    <style name="titlebar_text_style_beautif">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomRadioBtn">
        <item name="android:button">@drawable/guide_radiobutton_indicator</item>
    </style>

    <style name="popupwindow_anim_alpha" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_alpha</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden_alpha</item>
    </style>
</resources>
